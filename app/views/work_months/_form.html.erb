      <h2><%= pluralize(@work_month.errors.count, "error") %> prohibited this work_month from being saved:</h2>

      <ul>
      <% @work_month.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :year %>
  <%= f.hidden_field :month %>

  <%= f.label :name, "Who are you?" %>
  <%= f.text_field :name %>

  <table>
    <%= f.fields_for :work_days do |builder| %>
      <%= render partial: "work_days/form", locals: { f: builder } %>
    <% end %>
  </table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
